@{
    ViewData["Title"] = "Edit Dish";
}

@model Dish
<a href="/">Home</a>
<div class="text-center">
    <form asp-controller="Home" asp-action="Update" asp-route-selectId="@Model.DishId">
        <div class="form-group">
            <label asp-for="Chef"></label>
            <span asp-validation-for="Chef"></span>
            <input asp-for="Chef" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <span asp-validation-for="Calories"></span>
            <input asp-for="Calories" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span asp-validation-for="Tastiness"></span>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description"></span>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <button class="btn btn-success"> Edit Dish</button>
    </form>
</div>
