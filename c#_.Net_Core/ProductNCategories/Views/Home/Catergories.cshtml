@model Category

<h2> <a href="products"> Products </a> | <a href = "catergories" >Catergories</a>
<div class="row mt-5">
        <div class="col-md">
            <form asp-action="AddCategory" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <button type="submit">Create</button>
        </div>
    </form>
        </div>

        <div class="col-md">
            <h2>Existing Catergories</h2>
            <ul>
                @foreach (var category in @ViewBag.AllCatergories)
                {
                    <li><a href="/Catergories/@category.CategoryId">@category.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>