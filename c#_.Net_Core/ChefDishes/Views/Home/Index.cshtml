@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>

<hr>
<div class="text-center">
    <a href="New" class="btn btn-primary">Add Chef</a>
</div>

<h1 class="text-center">Check out our roster of Chefs!</h1>
<hr style="border: 2px solid black">

<div class="text-center">
    <table class="table table-striped table-hover">
  <thead>
    <tr>

      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col"># of dishes</th>
    </tr>
    <tbody>
        @foreach (var chef in @ViewBag.AllChefs)
        {
            <tr>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@chef.Age</td>
                <td>@chef.Dishes.Count</td>
            </tr>
        }
    </tbody>
</div>

