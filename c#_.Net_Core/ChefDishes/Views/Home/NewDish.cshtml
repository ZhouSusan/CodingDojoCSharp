@model Dish
<h1>Add a new Dish!</h1>
<a href="/">Home</a>
<div class="text-center">
    <form asp-action="AddDish" asp-controller="Home">
        <div class="form-group">
            <label asp-for="DishName"></label>
            <span asp-validation-for="DishName"></span>
            <input asp-for="DishName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <span asp-validation-for="Calories"></span>
            <input asp-for="Calories" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span asp-validation-for="Tastiness"></span>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="ChefId"></label>
            <select asp-for="ChefId"  class="form-control">
            @foreach (var chef in @ViewBag.AllChefs)
            {
                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
            }
            </select>
        </div>
        <span class="text-danger" asp-validation-for="ChefId"></span>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description"></span>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <button class="btn btn-success"> Add Dish</button>
    </form>
</div>
