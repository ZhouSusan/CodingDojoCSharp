@model Dish

<h2>Yum, take a look at our tasty dishes!</h2>
<hr style="border: 2px solid black;">
<div class="text-center">
    <a href="dishes/new" class="btn btn-primary">Add Dish</a>
</div>

<div class="text-center">
    <table class="table table-striped table-hover">
<thead>
    <tr>

        <th scope="col">Name</th>
        <th scope="col">Chef</th>
        <th scope="col">Tastiness</th>
        <th scope="col"> Calories</th>
    </tr>
    <tbody>
        @foreach (var dish in @ViewBag.AllDishes)
        {
            <tr>
                <td>@dish.DishName</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
        }
    </tbody>
</div>